<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BTTH4.HotelPage">
    <ContentPage.Content>
        <StackLayout>
            <Image Margin="20,10,20,20"
                Source="https://upload.wikimedia.org/wikipedia/commons/thumb/b/be/Booking.com_logo.svg/1280px-Booking.com_logo.svg.png"
                HeightRequest="100">
            </Image>

            <StackLayout Orientation="Horizontal" Padding="20,0,20,5">
                <Label Text="Them moi" FontSize="Large" TextColor="DarkBlue"
                       VerticalOptions="Center" HorizontalOptions="Center"></Label>
                <Button x:Name="CmdAddHotel" Text="+" FontAttributes="Bold" FontSize="Large"
                        VerticalOptions="Center" HorizontalOptions="Center"
                        Clicked="CmdAddHotel_Clicked"
                        ></Button>
            </StackLayout>

            <ListView x:Name="ListHotel" ItemSelected="ListHotel_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell ImageSource="{Binding hotelImg}" Text="{Binding hotelName}"></ImageCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
