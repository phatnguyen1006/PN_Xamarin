<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BTTH5.Screens.User.BookDetailPage">
    <ContentPage.Content>
        <StackLayout Padding="40">
            <Image Margin="0,0,0,40" x:Name="BookImage" HorizontalOptions="Center"></Image>

            <Label Margin="0,10,0,40" x:Name="BookName" HorizontalOptions="Center" FontSize="Title"
                   TextColor="MediumSeaGreen"
                   ></Label>

            <Label Margin="0,0,0,50" x:Name="BookPrice" FontSize="Medium" HorizontalOptions="Center" TextColor="OrangeRed"></Label>


            <Button x:Name="AddToCartBtn" Text="Add To Cart" Clicked="AddToCartBtn_Clicked"
                    ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
